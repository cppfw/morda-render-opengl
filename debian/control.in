Source: libruis-render-opengl
Section: libs
Priority: extra
Maintainer: Ivan Gagis <igagis@gmail.com>
Build-Depends:
	debhelper (>= 9),
	prorab,
	prorab-extra,
	clang-format,
	clang-tidy,
	libruis-dev (>= 0.5.160),
	libglew-dev
Build-Depends-Indep: doxygen
Standards-Version: 3.9.2

Package: libruis-render-opengl$(soname)
Section: libs
Architecture: any
Depends: ${shlibs:Depends}, ${misc:Depends}
Description: OpenGL renderer for ruis.
 OpenGL renderer for ruis GUI library.

Package: libruis-render-opengl$(soname)-dbg
Section: debug
Architecture: any
Depends: libruis-render-opengl$(soname) (= ${binary:Version}), ${misc:Depends}
Description: debugging symbols for libruis-render-opengl$(soname) package.

Package: libruis-render-opengl-dev
Section: libdevel
Architecture: any
Depends:
		libruis-render-opengl$(soname) (= ${binary:Version}),
		libruis-render-opengl$(soname)-dbg (= ${binary:Version}),
		libruis-dev,
		${misc:Depends}
Suggests: libruis-render-opengl-doc
Description: OpenGL renderer for ruis.
 OpenGL renderer for ruis GUI library.

Package: libruis-render-opengl-doc
Section: doc
Architecture: all
Depends: ${misc:Depends}
Description: documentation for libruis-render-opengl library.
 For more details see description to libruis-render-opengl-dev package.
